#!/bin/bash -ex
set -o pipefail
BACKUP_FILE="/var/ccp/backup/nova/backup-$(date -uIseconds | cut -f1 -d+).sql"
mysqldump -h {{ address('mariadb') }} \
    -u {{ nova.db.username }} -p{{ nova.db.password }} \
    --single-transaction {{ nova.db.name }} > "${BACKUP_FILE}"
BACKUP_FILE_API="/var/ccp/backup/nova/backup-$(date -uIseconds | cut -f1 -d+)-api.sql"
mysqldump -h {{ address('mariadb') }} \
    -u {{ nova.db.username }} -p{{ nova.db.password }} \
    --single-transaction {{ nova.db.api_name }} > "${BACKUP_FILE_API}"
